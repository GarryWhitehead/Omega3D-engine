{
	"DepthStencilState": {
		"DepthTestEnable": true,
		"DepthWriteEnable": true,
		"CompareOp": "LessOrEqual"
	},

	"RasterState": {
		"PolygonMode": "Fill",
		"CullMode": "Back",
		"FrontFace": "CounterClockwise"
	},
	
	"Sampler": {
		"MagFilter": "Nearest",
		"MinFilter": "Nearest",
		"AddressModeU": "ClampToEdge",
		"AddressModeV": "ClampToEdge",
		"AddressModeW": "ClampToEdge"
	},
	
	"CodePath": "bdrf.glsl",
	
	"VertexShader": {
		"Outputs": [
			{ "name": "outUv", "type": "vec2" } 
		]
	},
	
	"FragmentShader": {
		"Constants": [
			{ "name": "SampleCount", "type": "int",	"value": "1024"}
		],
		"Outputs": [
			{ "name": "outCol", "type": "vec4" }
		]
	}
}


